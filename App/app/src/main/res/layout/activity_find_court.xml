<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindCourt">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:padding="10dp"
            android:layout_centerInParent="true">
            <Button
                android:id="@+id/b1"
                android:layout_width="75dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="6:00"/>
            <Button
                android:id="@+id/b2"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/b1"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="7:00"/>
            <Button
                android:id="@+id/b3"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/b2"
                android:backgroundTint="#673AB7"
                android:text="8:00"/>
            <Button
                android:id="@+id/b4"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/b3"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="9:00"/>
            <Button
                android:id="@+id/b5"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="10:00"/>
            <Button
                android:id="@+id/b6"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/b5"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="11:00"/>
            <Button
                android:id="@+id/b7"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/b6"
                android:layout_below="@+id/b1"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="12:00"/>
            <Button
                android:id="@+id/b8"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b1"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/b7"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="13:00"/>
            <Button
                android:id="@+id/b9"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="14:00"/>
            <Button
                android:id="@+id/b10"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/b5"
                android:backgroundTint="#673AB7"
                android:text="15:00"/>
            <Button
                android:id="@+id/b11"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/b6"
                android:layout_below="@+id/b5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="16:00"/>
            <Button
                android:id="@+id/b12"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b5"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/b7"
                android:backgroundTint="#673AB7"
                android:text="17:00"/>
            <Button
                android:id="@+id/b13"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b9"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#673AB7"
                android:text="18:00"/>
            <Button
                android:id="@+id/b14"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b9"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/b9"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="19:00"/>
            <Button
                android:id="@+id/b15"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/b6"
                android:layout_below="@+id/b9"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:backgroundTint="#673AB7"
                android:text="20:00"/>
            <Button
                android:id="@+id/b16"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/b9"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/b7"
                android:backgroundTint="#673AB7"
                android:text="21:00"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Data"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/dateIV"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/date"
            android:layout_marginTop="30dp"
            android:background="@drawable/show"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/dateIV"
            android:fontFamily="@font/roboto_medium"
            android:text="Godzina"
            android:textColor="@color/black"
            android:textSize="20sp" />
        <Button
            android:id="@+id/timeIV"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/time"
            android:layout_marginTop="30dp"
            android:background="@drawable/show"/>
            <Button
                android:id="@+id/show"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="PokaÅ¼"
                android:backgroundTint="#B561C3"
                android:textSize="13sp"
                android:layout_toRightOf="@+id/timeIV"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:textColor="@color/white"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/rl1"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/listViewCourt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>